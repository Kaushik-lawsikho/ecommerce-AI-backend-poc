{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["src/tests/**/*", "**/*.test.ts", "**/*.spec.ts"]
  }
  